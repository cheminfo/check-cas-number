{
  "name": "check-cas-number",
  "version": "1.0.1",
  "license": "MIT",
  "description": "Check the validity of a CAS number (RN)",
  "keywords": [],
  "author": "Luc Patiny",
  "type": "module",
  "exports": {
    ".": "./lib/index.js"
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "npm run tsc && cheminfo-build --entry lib/index.js --root CheckCasNumber",
    "check-types": "tsc --noEmit",
    "clean": "rimraf coverage dist lib",
    "eslint": "eslint .",
    "eslint-fix": "eslint . --fix",
    "prepack": "npm run tsc",
    "prettier": "prettier --check .",
    "prettier-write": "prettier --write .",
    "test": "npm run test-only && npm run eslint && npm run prettier && npm run check-types",
    "test-only": "vitest run --coverage",
    "tsc": "npm run clean && npm run tsc-build",
    "tsc-build": "tsc --project tsconfig.build.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/check-cas-number.git"
  },
  "bugs": {
    "url": "https://github.com/cheminfo/check-cas-number/issues"
  },
  "homepage": "https://github.com/cheminfo/check-cas-number#readme",
  "devDependencies": {
    "@types/node": "^24.5.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@zakodium/tsconfig": "^1.0.2",
    "cheminfo-build": "^1.3.1",
    "cheminfo-types": "^1.8.1",
    "eslint": "^9.35.0",
    "eslint-config-cheminfo-typescript": "^20.0.0",
    "fifo-logger": "^2.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
